               let msg = null;
            
               if ( typeof x === "object") {
                   msg = x.vars ;
               } else {
              
                  msg = JSON.parse(x).vars;
               };
              
               slider1.value = msg[0] ;
               slider2.value =msg[1] ;
               txt1.value =  msg[2] ;
               sync_txt1.innerHTML=msg[2] ;
            }


            const get_values= function() {
